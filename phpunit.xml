            <directory>tests/unit</directory>
            <directory>vendor/basho/riak/tests/unit</directory>
        </testsuite>
        <testsuite name="Functional Tests">
            <directory>tests/functional</directory>
            <directory>vendor/basho/riak/tests/functional</directory>
